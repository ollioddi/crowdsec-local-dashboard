# Database URL for SQLite
DATABASE_URL="file:./dev.db"

# Better Auth configuration
BETTER_AUTH_SECRET= # Generate with: npx @better-auth/cli secret
# BETTER_AUTH_URL= # Optional. Set only if behind a reverse proxy where the request origin is wrong (e.g. https://dashboard.example.com)

# CrowdSec LAPI connection (include port in URL, e.g. http://192.168.10.75:8080)
LAPI_URL=
LAPI_MACHINE_ID=
LAPI_MACHINE_PASSWORD=
LAPI_BOUNCER_API_TOKEN=
LAPI_POLL_INTERVAL=60 # seconds between LAPI syncs (default: 60)

# OIDC/OAuth SSO (optional â€” configure all three to enable SSO login button)
# Redirect URI to register with your provider: {BETTER_AUTH_URL}/api/auth/oauth2/callback/oidc
# OIDC_CLIENT_ID=
# OIDC_CLIENT_SECRET=
# OIDC_ISSUER_URL=          # e.g. https://authentik.example.com/application/o/my-app/
# OIDC_BUTTON_LABEL=        # Label for the SSO button (default: "Sign in with SSO")
# OIDC_AUTO_REDIRECT=false  # Set to true to skip the login form and go straight to SSO
